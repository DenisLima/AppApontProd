<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.gktb.appapontprod">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <activity
            android:name=".tela_principal"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".tela_menu" android:screenOrientation="portrait"></activity>
        <activity android:name=".tela_data" android:screenOrientation="portrait"></activity>
        <activity android:name=".tela_maquinas" android:screenOrientation="portrait"></activity>
        <activity android:name=".tela_lotes" android:screenOrientation="portrait"></activity>
        <activity android:name=".tela_detalhes_lote" android:screenOrientation="portrait"></activity>
        <activity android:name=".tela_parada_maquina" android:screenOrientation="portrait"></activity>
        <activity android:name=".tela_motivo_parada" android:screenOrientation="portrait"></activity>

    </application>

</manifest>
