        android:textColor="#c1c1c1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="285"
        android:id="@+id/txtQtdAlimen"
        android:layout_below="@+id/txtQtdAdicDetalhes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Qtd Alimen.: "
        android:id="@+id/textView10"
        android:layout_below="@+id/textView8"
        android:layout_toLeftOf="@+id/txtQtdAlimen"
        android:layout_toStartOf="@+id/txtQtdAlimen"
        android:textColor="#c1c1c1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/txtQtdReal"
        android:layout_below="@+id/txtQtdAlimen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Qtd Real: "
        android:id="@+id/textView13"
        android:layout_below="@+id/txtQtdAlimen"
        android:layout_toLeftOf="@+id/txtQtdReal"
        android:layout_toStartOf="@+id/txtQtdReal"
        android:textColor="#c1c1c1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtIdDetalhes"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

</RelativeLayout>